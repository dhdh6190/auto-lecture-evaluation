{
  "manifest_version": 2,
  "name": "Auto Lecture Evaluation for Sogang Univ.",
  "version": "0.1",
  "description": "Auto Lecture Evaluation for Sogang Univ.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": { 
    "16": "images/icon-16.png", 
    "48": "images/icon-48.png", 
    "128": "images/icon-128.png" 
  },
  "permissions": [
    "tabs",
    "http://saint.sogang.ac.kr/*",
    "https://saint.sogang.ac.kr/*"
  ],
  "content_scripts": [{
    "run_at": "document_idle",
    "matches": [
      "http://saint.sogang.ac.kr/*", "https://saint.sogang.ac.kr/*",
      "http://sis109.sogang.ac.kr/*", "https://sis109.sogang.ac.kr/*"
    ],
    "js": ["auto.js"],
    "all_frames": true
  }]
}